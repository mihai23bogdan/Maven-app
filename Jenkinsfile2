pipeline {
    agent any
    environment {
        dockerimage = "mavenapp"
        dockercontainer = "maven"
    }
    stages {
      stage ('Copy') {
        steps {
             sh 'cp /var/lib/jenkins/workspace/Maven_app/target/my-app-1.0-SNAPSHOT.jar .'
            }
        }
    stage ('Script permissions') {
        steps {
             sh 'chmod +x ./scriptclean.sh'
            }
        }  
    stage ('Execute script') {
        steps {
             sh './scriptclean.sh'
            }
        }   
    stage ('Docker build') {
        steps {
             sh 'docker build -t ${dockerimage}:$BUILD_NUMBER'
            }
        }  
    stage ('Docker run') {
        steps {
             sh 'docker run --name ${dockercontainer} ${dockerimage}:$BUILD_NUMBER'
            }
        }
    }
}         
